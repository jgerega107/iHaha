<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_picture_cardview_messageoverview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/profile_picture_messageoverview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/username_messageoverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_picture_cardview_messageoverview"
            android:textColor="@color/colorText"
            android:text="username"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/latestmessage_messageoverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_messageoverview"
            android:layout_toEndOf="@id/profile_picture_cardview_messageoverview"
            android:textColor="@color/colorText"
            android:text="message"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@color/fui_transparent"
            android:visibility="gone"
            android:tint="#03a9f4"
            android:id="@+id/unreadmessage_messageoverview"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:background="@color/fui_transparent"
            android:visibility="gone"
            android:tint="#e53935"
            android:id="@+id/unseenimage_messageoverview"/>
    </RelativeLayout>
</LinearLayout>



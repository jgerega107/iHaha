<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp"
                android:id="@+id/profile_picture_cardview_selectconversationoverview">
                <ImageView
                    android:id="@+id/profile_picture_selectconversationoverview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person_black_24dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/username_selectconversationoverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/profile_picture_cardview_selectconversationoverview"
                android:textColor="@color/colorText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/latestmessage_selectconversationoverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_selectconversationoverview"
                android:textColor="@color/colorText"
                android:layout_toEndOf="@id/profile_picture_cardview_selectconversationoverview"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:buttonTint="@color/colorText"
                android:id="@+id/selectusercheckbox_selectconversationoverview"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>



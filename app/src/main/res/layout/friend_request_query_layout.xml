<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewholder_friendrequestactivity"
    android:visibility="gone"
    android:background="@color/colorAccent">
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="5dp"
        android:id="@+id/profile_picture_cardview_friendrequestactivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_picture_friendrequestactivity"
            android:src="@drawable/ic_person_black_24dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/user_name_friendrequestactivity"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/profile_picture_cardview_friendrequestactivity"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginEnd="5dp"
            app:cardElevation="5dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fui_transparent"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_margin="15dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:id="@+id/reject_friendrequestactivity"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginStart="5dp"
            app:cardElevation="5dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fui_transparent"
                android:layout_margin="15dp"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_check_black_24dp"
                android:id="@+id/accept_friendrequestactivity"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>